<BaseMenuLayout>
    size_hint: 1 / 2, 2 / 3
    pos_hint: {'center_x': 0.6, 'center_y': 0.5}
    padding: 0.001 * self.width
    canvas:
        Color:
            rgba: 0.0, 0.0, 0.0, 0.4
        Rectangle:
            pos: self.pos
            size: self.size



<ImageRemoveLayout>:
    size_hint: 1 / 2, 2 / 3
    pos_hint: {'center_x': 0.6, 'center_y': 0.5}
    padding: 0.001 * self.width
    canvas:
        Color:
            rgba: 0.0, 0.0, 0.0, 0.4
        Rectangle:
            pos: self.pos
            size: self.size


<ImageUploadLayout>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        pos: self.parent.pos

        FloatLayout:
            size_hint: 1, 0.1
            Label:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                text: "Provide image information:"
                font_size: self.height / 2
        BoxLayout:
            size_hint: 1, 0.7
            BoxLayout:
                size_hint: 0.3, 1
                orientation: 'vertical'

                Label:
                    size_hint: 1, 0.2
                    text: "Coordinates:"

                FloatLayout:
                    size_hint: 1, 0.4
                    padding: 0.05 * self.width
                    spacing: 0.03 * self.width
                    TextInput:
                        pos_hint: {'center_x': 0.25, 'center_y': 0.8}
                        multiline: False
                        size_hint: 0.3, 0.2
                        font_size: self.height / 2
                        id: coordinate_x
                    TextInput:
                        pos_hint: {'center_x': 0.75, 'center_y': 0.8}
                        multiline: False
                        size_hint: 0.3, 0.2
                        font_size: self.height / 2
                        id: coordinate_y
                BoxLayout:
                    size_hint: 1, 0.2
                    padding: 0.1 * self.height
                    Button:
                        text: "Select image"
                        on_release: root.show_file_chooser()
                FloatLayout:
                    size_hint: 1, 0.2
                    TextInput:
                        size_hint: 0.9, 0.7
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        id: status_label
                        hint_text: "No image selected"
                        readonly: True
                        shorten: True
                        ellipsis: True
            BoxLayout:
                size_hint: 0.7, 1
                orientation: 'vertical'
                BoxLayout:
                    size_hint: 1, 0.2
                    FloatLayout:
                        size_hint: 0.7, 1
                        Label:
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            text: "Map:"
                    FloatLayout:
                        id: map_status
                        size_hint: 0.3, 1
                        TextInput:
                            size_hint: 1, 0.35
                            readonly: True
                            pos_hint: {'center_x': 0.1, 'center_y': 0.5}
                            hint_text: "No map selected"
                BoxLayout:
                    padding: 0.05 * self.width
                    spacing: 0.03 * self.width
                    size_hint: 1, 0.8
                    orientation: 'vertical'
                    BoxLayout:
                        spacing: 0.03 * self.width
                        Button:
                            text: "Velen and Novigrad"
                            on_release: root.select_map('velen_novigrad')
                        Button:
                            text: "Skellige"
                            on_release: root.select_map('skellige')
                    BoxLayout:
                        spacing: 0.03 * self.width
                        Button:
                            text: "Kaer Morhen"
                            on_release: root.select_map('kaer_morhen')
                        Button:
                            text: "White Orchard"
                            on_release: root.select_map('bialy_sad')
        BoxLayout:
            padding: [0.05 * self.width, 0.01 * self.width]
            size_hint: 1, 0.2
            FloatLayout:
                size_hint: 0.5, 1
                Button:
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    text: "Submit"
                    on_release: root.submit()


<AnimationScreen>:
    canvas:
        Color:
            rgba: 0, 0, 0, 1

        Rectangle:
            pos: self.pos
            size: self.size


<GameChooseLayout>
    GameChooseButton:
        text: "Guess your location"
        font_size: self.width / 13
        size_hint: 1 / 3, 1 / 3
        pos_hint: {'center_x': 0.25, 'center_y': 0.75}
        on_release: self.launch_basic_guessr()


<MainMenuBar>:
    orientation: 'vertical'
    size_hint: None, 1

    canvas:
        Color:
            rgba: 0.0, 0.0, 0.0, 0.4

        Rectangle:
            pos: self.pos
            size: self.size

<MainMenuBarButton>:
    font_size: self.width / 16


<StartGameButton>:
    text: "Play"

<GameTitleLabel@Label>:
    text: "The Witcher GeoGuesser"
    font_size: self.width / 12


<ImageAddButton>:
    text: "Add image"

<ImageRemoveButton>:
    text: "Remove image"


<ExitButton>:
    text: "Quit"
    on_release: quit()


<MainMenu>:
    Image:
        source: 'TheWitcherGeoGuessr/graphics/background.jpg'
        allow_stretch: True

    FloatLayout:
        canvas:
            Color:
                rgba: 0, 0, 0, 0.75
            Rectangle:
                size: self.size
                pos: self.pos

        size: root.width, root.height

        MainMenuBar:
            pos_hint: {'center_x': 0.2, 'center_y': 0.5}
            size: (root.width / 4), root.height

            GameTitleLabel:
                pos_hint: {'center_x': 0.5, 'center_y': 0.9}
                size_hint: (7 / 8), (1 / 12)

            StartGameButton:
                pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                size_hint: (7 / 8), (1 / 12)

            ImageAddButton:
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                size_hint: (7 / 8), (1 / 12)

            ImageRemoveButton:
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                size_hint: (7 / 8), (1 / 12)

            ExitButton:
                pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                size_hint: (7 / 8), (1 / 12)