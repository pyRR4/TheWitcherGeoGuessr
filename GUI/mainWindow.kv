#:kivy 1.0.9


<OptionsLayout>:


<GameChooseLayout>:
    padding: 0.001 * self.width
    canvas:
        Color:
            rgba: 0.3, 0.3, 0.3, 0.8

        Rectangle:
            pos: self.pos
            size: self.size

    GameChooseButton:
        size_hint: 1 / 3, 1 / 3
        pos_hint: {'center_x': 0.25, 'center_y': 0.75}
        on_release: self.launch_basic_guessr()
    GameChooseButton:
        size_hint: 1 / 3, 1 / 3
        pos_hint: {'center_x': 0.75, 'center_y': 0.25}
    GameChooseButton:
        size_hint: 1 / 3, 1 / 3
        pos_hint: {'center_x': 0.75, 'center_y': 0.75}
    GameChooseButton:
        size_hint: 1 / 3, 1 / 3
        pos_hint: {'center_x': 0.25, 'center_y': 0.25}


<MainMenuBar@FloatLayout>:
    orientation: 'vertical'
    size_hint: None, 1


    canvas:
        Color:
            rgba: 0.0, 0.0, 0.0, 0.8

        Rectangle:
            pos: self.pos
            size: self.size


<StartGameButton>:
    text: "Zagraj"


<ExitButton>:
    text: "Wyjdz"
    on_release: quit()


<MainMenu>:
    game_choose_layout: game_choose_layout
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height
        MainMenuBar:
            pos_hint: {'center_x': 0.2, 'center_y': 0.5}
            size: (root.width / 4), root.height

            StartGameButton:
                pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                size_hint: (7 / 8), (1 / 12)

            ExitButton:
                pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                size_hint: (7 / 8), (1 / 12)


        GameChooseLayout:
            id: game_choose_layout
            opacity: 0
            size_hint: None, None
            size: root.width / 2, 2 * root.height / 3
            pos_hint: {'center_x': 0.6, 'center_y': 0.5}