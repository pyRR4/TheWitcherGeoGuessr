#:kivy 1.0.9

<BaseMenuLayout>
    size_hint: 1 / 2, 2 / 3
    pos_hint: {'center_x': 0.6, 'center_y': 0.5}
    padding: 0.001 * self.width
    canvas:
        Color:
            rgba: 0.0, 0.0, 0.0, 0.8

        Rectangle:
            pos: self.pos
            size: self.size


<OptionsLayout>:
    BoxLayout:
        BoxLayout:

        BoxLayout:

<AnimationScreen>:
    canvas:
        Color:
            rgba: 0, 0, 0, 1

        Rectangle:
            pos: self.pos
            size: self.size


<GameChooseLayout>
    GameChooseButton:
        text: "Guess your location"
        size_hint: 1 / 3, 1 / 3
        pos_hint: {'center_x': 0.25, 'center_y': 0.75}
        on_release: self.launch_basic_guessr()
    GameChooseButton:
        size_hint: 1 / 3, 1 / 3
        pos_hint: {'center_x': 0.75, 'center_y': 0.25}
    GameChooseButton:
        size_hint: 1 / 3, 1 / 3
        pos_hint: {'center_x': 0.75, 'center_y': 0.75}
    GameChooseButton:
        size_hint: 1 / 3, 1 / 3
        pos_hint: {'center_x': 0.25, 'center_y': 0.25}


<MainMenuBar>:
    orientation: 'vertical'
    size_hint: None, 1


    canvas:
        Color:
            rgba: 0.0, 0.0, 0.0, 0.4

        Rectangle:
            pos: self.pos
            size: self.size


<StartGameButton>:
    text: "Play"


<OptionsButton>:
    text: "Options"


<ExitButton>:
    text: "Quit"
    on_release: quit()


<MainMenu>:
    Image:
        source: 'images/velen_novigrad/5/image.jpg'
        allow_stretch: True

    FloatLayout:
        canvas:
            Color:
                rgba: 0, 0, 0, 0.75
            Rectangle:
                size: self.size
                pos: self.pos

        size: root.width, root.height

        MainMenuBar:
            pos_hint: {'center_x': 0.2, 'center_y': 0.5}
            size: (root.width / 4), root.height

            StartGameButton:
                pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                size_hint: (7 / 8), (1 / 12)

            OptionsButton:
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                size_hint: (7 / 8), (1 / 12)

            ExitButton:
                pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                size_hint: (7 / 8), (1 / 12)